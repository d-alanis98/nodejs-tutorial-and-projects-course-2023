doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Pug template
    body
        main(style="display: flex; flex-direction: column; align-items: center; justify-content: center;")
            h1 Hi from Pug
            h2 These parameters come from Express: 
            ul(style="list-style: none; display: flex; flex-direction: column; align-items: center;")
                li Name: #{ name }
                li Age: #{ age }
